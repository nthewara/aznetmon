{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch AzNetMon",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": ["-targets", "8.8.8.8,1.1.1.1,google.com", "-port", "8080"],
            "sudo": true
        },
        {
            "name": "Debug Current Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${file}"
        },
        {
            "name": "Debug All Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/..."
        }
    ]
}